}

.stamina-bar .unity-progress-bar__progress {
    background-color: rgb(9, 83, 152);
    border-radius: 7.5px;
    height: 12px;
}

.stamina-bar .unity-progress-bar__background {
    background-color: rgba(9, 83, 152, 0.25);
    border-color: rgba(0, 0, 0, 0);
    border-radius: 7.5px;
    height: 18px;
