}

.health-bar {
    align-self: flex-start;
    padding-left: 0;
    padding-bottom: 0;
    width: 350px;
    height: 0;
    justify-content: center;
    align-items: stretch;
    background-color: rgb(130, 23, 23);
}

.health-bar .unity-progress-bar__progress {
    background-color: rgb(159, 37, 37);
    border-radius: 7.5px;
}

.health-bar .unity-progress-bar__background {
    background-color: rgba(159, 37, 37, 0.25);
    border-color: rgba(0, 0, 0, 0);
    border-radius: 7.5px;
}

.stamina-bar {
    max-width: none;
